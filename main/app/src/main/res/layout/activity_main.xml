<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/logo_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#0C2840"
        android:orientation="vertical">

        <ImageView android:id="@+id/main_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:contentDescription="@string/logo_description"
            android:scaleType="centerCrop"
            android:src="@drawable/logo2" />

    </LinearLayout>

    <!-- 첫 번째 탭 -->
    <LinearLayout
        android:id="@+id/chart_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_img"
        android:layout_alignBottom="@+id/logo_img"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="50dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/tab_chart_frag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- 두 번째 탭 -->
    <LinearLayout
        android:id="@+id/study_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo_img"
        android:layout_marginTop="-45dp"
        android:orientation="vertical"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/tab_study_frag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- 탭 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#0C2840"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_chart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="CHART"
            android:backgroundTint="#0C2840"
            android:onClick="onTabClicked"/>

        <Button
            android:id="@+id/btn_study"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="STUDY"
            android:backgroundTint="#0C2840"
            android:onClick="onTabClicked"/>
    </LinearLayout>

</RelativeLayout>
