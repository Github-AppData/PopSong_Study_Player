<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/word_ui_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- 로고 이미지와 마이페이지로 이동하는 버튼을 포함한 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0C2840"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="단어장"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold">

            </TextView>

            <Button
                android:id="@+id/btn_mypage_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:text="back"
                android:textSize="18sp">

            </Button>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wordbook_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        >
        <fragment
            android:id="@+id/tab_word_frag"
            android:name="com.example.main.WordbookActivity$WordbookFragActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/btn_word_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="#0C2840"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_word"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#0C2840"
            android:onClick="onTabClicked"
            android:textSize="24sp"
            android:text="Word" />


    </LinearLayout>

</RelativeLayout>
